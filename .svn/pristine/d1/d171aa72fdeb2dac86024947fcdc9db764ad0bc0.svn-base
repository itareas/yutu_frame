*{
    -moz-box-sizing:border-box; /* Firefox */
    -webkit-box-sizing:border-box; /* Safari */
    box-sizing: border-box;
}
body {
    padding:0;
    margin:0;
    font-size: 14px;
    font-family: "Microsoft YaHei", Arial,sans-serif;
    color: #FFF;
    background: -webkit-radial-gradient(#102453, #0F0C28);
    background: -o-radial-gradient(#102453, #0F0C28);
    background: -moz-radial-gradient(#102453, #0F0C28);
    background: radial-gradient(#102453, #0F0C28);
    width: 100%;
}
ul,ol,li{
    padding:0;
    margin:0;
    list-style:none;
}
img,iframe{
    border:none;
}
a{
    text-decoration: none;
    color: #FFF;
    cursor: pointer;
}
a:hover {
    text-decoration: none;
}

.user{
    float: left;
    height: 100%;
    line-height: 25px;
    font-size:14px;
    color: #87D3FF;
    background: url(../images/common/up.png) right 13px no-repeat;
    padding-right:13px;
    margin-right:8px;
}